{
    "name": "blktool",
    "displayName": "BlkTool",
    "description": "Blk tools",
    "version": "0.0.3",
    "publisher": "eguskov",
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.blktool.findInclude",
        "onCommand:extension.blktool.findSelfInclude",
        "onCommand:extension.blktool.findAllIncludes",
        "onCommand:extension.blktool.openInclude",
        "onCommand:extension.blktool.showResultFile"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.blktool.findInclude",
                "title": "BLK: Find include under cursor"
            },
            {
                "command": "extension.blktool.findSelfInclude",
                "title": "BLK: Find SELF includes"
            },
            {
                "command": "extension.blktool.openInclude",
                "title": "BLK: Open file under cursor"
            },
            {
                "command": "extension.blktool.findAllIncludes",
                "title": "BLK: Find all includes in current file"
            },
            {
                "command": "extension.blktool.showResultFile",
                "title": "BLK: Show result"
            }
        ],
        "keybindings": [
            {
                "command": "extension.blktool.openInclude",
                "key": "alt+insert",
                "when": "editorTextFocus && resourceLangId == blk"
            },
            {
                "command": "extension.blktool.findSelfInclude",
                "key": "alt+shift+insert",
                "when": "editorTextFocus && resourceLangId == blk"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "when": "resourceLangId == blk",
                    "command": "extension.blktool.openInclude",
                    "group": "navigation"
                },
                {
                    "when": "resourceLangId == blk",
                    "command": "extension.blktool.findInclude",
                    "group": "navigation"
                },
                {
                    "when": "resourceLangId == blk",
                    "command": "extension.blktool.findSelfInclude",
                    "group": "navigation"
                },
                {
                    "when": "resourceLangId == blk",
                    "command": "extension.blktool.showResultFile",
                    "group": "navigation"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    },
    "dependencies": {
        "@types/glob": "^5.0.29",
        "glob": "^7.0.6"
    }
}